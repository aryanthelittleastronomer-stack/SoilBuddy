  <script>
    const body = document.body;
    const toggleBtn = document.getElementById('theme-toggle');

    toggleBtn.addEventListener('click', () => {
      body.classList.toggle('dark');
      body.classList.toggle('light');
    });

    // üó∫Ô∏è Leaflet Map - Pointer on Bal Bharati Public School
    const map = L.map('map').setView([28.58524095487835, 77.3379912507627], 18);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    L.marker([28.58524095487835, 77.3379912507627])
      .addTo(map)
      .bindPopup('<b>Bal Bharati Public School</b><br>Sector 21, Noida')
      .openPopup();
  </script>
